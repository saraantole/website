---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import ContactButton from "../components/ContactButton.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout pageTitle={title} pageDescription={description}>
  <article class="blog-post">
    <div class="post-wrapper">
      {
        heroImage && (
          <div class="hero-image">
            <Image width={1200} height={600} src={heroImage} alt={title} />
          </div>
        )
      }

      <div class="post-header">
        <div class="post-meta">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <span class="last-updated">
                Â· Updated on <FormattedDate date={updatedDate} />
              </span>
            )
          }
        </div>
        <h1 class="post-title">{title}</h1>
      </div>

      <div class="post-content">
        <slot />
      </div>
    </div>
  </article>
  <ContactButton />
</Layout>

<style is:global>
  .blog-post {
    width: 100%;
    background: var(--color-background);
    padding: 60px 0 350px 0;
  }

  .post-wrapper {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .hero-image {
    margin-bottom: 60px;
    margin-left: -40px;
    margin-right: -40px;
    width: calc(100% + 80px);
    box-shadow: 0 0 2.5rem rgba(0, 0, 0, 0.16);
    line-height: 0;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-header {
    margin-bottom: 60px;
  }

  .post-meta {
    font-size: 20px;
    margin-bottom: 20px;
    color: var(--color-text);
    opacity: 0.6;
  }

  .last-updated {
    font-style: italic;
  }

  .post-title {
    font-size: 56px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
    color: var(--color-text);
  }

  .post-content {
    font-size: 24px;
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content h1 {
    font-size: 48px;
    font-weight: 600;
    margin: 60px 0 30px 0;
    color: var(--color-text);
  }

  .post-content h2 {
    font-size: 40px;
    font-weight: 600;
    margin: 50px 0 25px 0;
    color: var(--color-text);
  }

  .post-content h3 {
    font-size: 32px;
    font-weight: 600;
    margin: 40px 0 20px 0;
    color: var(--color-text);
  }

  .post-content p {
    margin: 0 0 30px 0;
  }

  .post-content a {
    color: var(--color-text);
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .post-content a:hover {
    opacity: 0.7;
  }

  .post-content ul,
  .post-content ol {
    margin: 0 0 30px 0;
    padding-left: 40px;
  }

  .post-content li {
    margin-bottom: 15px;
  }

  .post-content blockquote {
    margin: 40px 0;
    padding: 20px 30px;
    border-left: 4px solid var(--color-text);
    font-style: italic;
    opacity: 0.8;
  }

  .post-content code {
    font-family: "Courier New", monospace;
    font-size: 0.9em;
    background: var(--color-tertiary);
    padding: 2px 8px;
    border-radius: 4px;
  }

  .post-content pre {
    margin: 40px 0;
    padding: 30px;
    background: var(--color-tertiary);
    overflow-x: auto;
    border-radius: 8px;
  }

  .post-content pre code {
    background: none;
    padding: 0;
  }

  .post-content img {
    max-width: 100%;
    height: auto;
    margin: 40px 0;
    display: block;
  }

  .post-content hr {
    margin: 60px 0;
    border: none;
    border-top: 2px solid var(--color-text);
    opacity: 0.2;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 20px 0 150px 0;
    }

    .post-wrapper {
      padding: 0 20px;
    }

    .hero-image {
      margin-bottom: 40px;
      margin-left: -20px;
      margin-right: -20px;
      width: calc(100% + 40px);
    }

    .post-header {
      margin-bottom: 40px;
    }

    .post-meta {
      font-size: 18px;
      margin-bottom: 15px;
    }

    .post-title {
      font-size: 36px;
    }

    .post-content {
      font-size: 20px;
    }

    .post-content h1 {
      font-size: 32px;
      margin: 40px 0 20px 0;
    }

    .post-content h2 {
      font-size: 28px;
      margin: 35px 0 18px 0;
    }

    .post-content h3 {
      font-size: 24px;
      margin: 30px 0 15px 0;
    }

    .post-content ul,
    .post-content ol {
      padding-left: 25px;
    }

    .post-content blockquote {
      margin: 30px 0;
      padding: 15px 20px;
    }

    .post-content pre {
      margin: 30px 0;
      padding: 20px;
    }
  }
</style>
