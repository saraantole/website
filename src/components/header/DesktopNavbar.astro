---
import { NAV_LINKS } from "../../config";

const currentPath = Astro.url.pathname;

const navLinks = NAV_LINKS;
---

<nav class="desktop-navbar">
  {
    navLinks.menu.map(({ name, url }) => (
      <a href={url} class={`nav-link ${currentPath === url ? "current" : ""}`}>
        {name}
      </a>
    ))
  }
</nav>

<style>
  .desktop-navbar {
    display: none;
  }

  @media (min-width: 992px) {
    .desktop-navbar {
      display: flex;
      justify-content: center;
      align-items: center;
      background: transparent;
      gap: 2rem;
    }

    .desktop-navbar a {
      color: var(--color-primary);
    }
  }

  .nav-link {
    font-size: 24px;
    font-weight: 400;
    text-align: center;
    position: relative;
    padding: 0;
    white-space: nowrap;
  }

  .nav-link::before {
    transition: 200ms ease-out;
    height: 2px;
    content: "";
    position: absolute;
    background-color: var(--color-primary);
    width: 0%;
    bottom: -1px;
  }

  .nav-link:hover::before {
    width: 100%;
  }

  .nav-link.current {
    text-decoration: underline;
  }

  .nav-link.current:hover::before {
    width: 0%;
  }

  /* White navigation when hero is present (desktop only) */
  @media (min-width: 992px) {
    :global(.header.has-hero) .desktop-navbar a {
      color: var(--color-background) !important;
    }

    :global(.header.has-hero) .nav-link::before {
      background-color: var(--color-background);
    }
  }
</style>
