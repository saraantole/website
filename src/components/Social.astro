---
import { SOCIAL_MEDIA } from "../config";

export interface Props {
  width?: string;
  padding?: string;
}

const { width = "auto", padding = "0" } = Astro.props;
---

<div class="social-links" style={`width: ${width}; padding: ${padding};`}>
  {
    SOCIAL_MEDIA.map((social) => (
      <a
        href={social.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Follow on ${social.name}`}
