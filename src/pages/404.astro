---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import dinoGif from "../assets/dino.gif";
---

<Layout pageTitle="404: Not found">
  <section class="not-found-section">
    <div class="content-wrapper">
      <h1 data-testid="heading">OOPS!</h1>
      <div class="dino-container">
        <Image
          src={dinoGif}
          alt="404 Dinosaur"
          width={500}
          height={500}
          loading="eager"
          class="dino-image"
        />
      </div>
      <p>You just hit a route that doesn't exist... the sadness.</p>
      <a href="/" class="home-button" data-astro-history="replace">Go back home</a>
    </div>
  </section>
</Layout>

<style>
  .not-found-section {
    width: 100%;
    margin: 0 auto;
    padding: 0 2.5rem;
    min-height: calc(100vh - var(--header-height) - var(--footer-height));
    background: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    width: 100%;
    max-width: 800px;
    padding: 50px 0;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
  }

  .dino-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .dino-image {
    max-width: 480px;
    width: 100%;
    height: auto;
  }

  p {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
    max-width: 600px;
  }

  .home-button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--color-primary);
    color: var(--color-background);
    text-transform: uppercase;
    border-radius: var(--border-radius);
    font-weight: 500;
    font-size: 1.125rem;
    transition: all 0.3s ease;
    border: 2px solid var(--color-primary);
    text-decoration: none;
  }

  .home-button:hover {
    background-color: transparent;
    color: var(--color-primary);
  }

  .home-button:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  @media (max-width: 768px) {
    .not-found-section {
      padding: 0 1.5rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .dino-image {
      max-width: 300px;
    }

    p {
      font-size: 1.25rem;
    }

    .home-button {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .dino-image {
      max-width: 250px;
    }

    p {
      font-size: 1.125rem;
    }
  }
</style>
