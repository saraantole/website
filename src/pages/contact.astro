---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../config";
import ContactForm from "../components/ContactForm.astro";

const frontmatter = {
  seoTitle: "Contact",
  useSeoTitleSuffix: true,
};

const { seoTitle, useSeoTitleSuffix } = frontmatter;
const seoTitleSuffix = SITE_TITLE;

// SEO title logic from original component
const pageTitle = useSeoTitleSuffix
  ? `${seoTitle} - ${seoTitleSuffix}`
  : seoTitle;
---

<Layout pageTitle={pageTitle} pageDescription="Get in touch with Sara Antole">
  <section class="contact-section">
    <div class="contact-wrapper">
      <h2>Let's get in touch!</h2>
      <ContactForm />
    </div>
  </section>
</Layout>

<style>
  .contact-section {
    width: 100%;
    background: var(--color-background);
    padding: 200px 0 20px 0;
  }

  .contact-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-evenly;
    align-items: flex-start;
    padding: 0 80px;
    gap: 60px;
  }

  h2 {
    font-weight: 700;
    font-size: clamp(108px, 4.5vw, 4.5em);
    letter-spacing: 2px;
    line-height: 1.2;
    margin: 0;
    width: 30vw;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 20px 0;
    }
    .contact-wrapper {
      flex-direction: column;
      padding: 40px;
      gap: 40px;
    }

    h2 {
      width: 100%;
      font-size: 48px;
      line-height: 60px;
    }
  }
</style>
