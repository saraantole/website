---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import ContactButton from "../../components/ContactButton.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout pageTitle="Blog" pageDescription="Read my latest articles and insights">
  <section class="blog-section">
    <div class="blog-wrapper">
      <h1 class="blog-title" id="blog-title">Blog</h1>
      <ul class="posts-grid">
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <div class="post-image">
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt={post.data.title}
                    />
                  </div>
                )}
                <h3 class="post-title">{post.data.title}</h3>
                <p class="post-date">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
  <ContactButton />
</Layout>

<style>
  .blog-section {
    width: 100%;
    min-height: 100vh;
    background: var(--color-background);
    padding: 100px 0 350px 0;
  }

  .blog-wrapper {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .blog-title {
    font-size: 72px;
    font-weight: 600;
    margin: 0 0 60px 0;
    color: var(--color-text);
    will-change: transform;
    transform: translateZ(0);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .posts-grid li {
    display: flex;
  }

  .posts-grid a {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    width: 100%;
    transition: transform 0.3s ease;
  }

  .posts-grid a:hover {
    transform: translateY(-5px);
  }

  .post-image {
    margin-bottom: 20px;
    overflow: hidden;
    line-height: 0;
    box-shadow: 0 0 2.5rem rgba(0, 0, 0, 0.16);
  }

  .post-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .posts-grid a:hover .post-image img {
    transform: scale(1.05);
  }

  .post-title {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 10px 0;
    line-height: 1.3;
    color: var(--color-text);
  }

  .post-date {
    font-size: 20px;
    margin: 0;
    color: var(--color-text);
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .blog-section {
      padding: 40px 0 200px 0;
    }

    .blog-wrapper {
      padding: 0 20px;
    }

    .blog-title {
      font-size: 48px;
      margin-bottom: 40px;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .post-title {
      font-size: 28px;
    }

    .post-date {
      font-size: 18px;
    }
  }
</style>

<script>
  function initBlogParallax() {
    const titleElement = document.getElementById("blog-title");

    if (!titleElement) {
      return;
    }

    let ticking = false;

    const updateParallax = () => {
      const scrollY = window.scrollY;
      const scrollProgress = scrollY * 1.2;

      titleElement.style.transform = `translateX(${scrollProgress}px)`;

      ticking = false;
    };

    const requestTick = () => {
      if (!ticking) {
        window.requestAnimationFrame(updateParallax);
        ticking = true;
      }
    };

    window.addEventListener("scroll", requestTick, { passive: true });

    // Initial call
    updateParallax();
  }

  // Run on page load
  initBlogParallax();

  // Re-run after Astro view transitions
  document.addEventListener("astro:page-load", initBlogParallax);
</script>
